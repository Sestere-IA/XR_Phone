<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xr_phone" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XR_Phone" >
        <activity
            android:name=".activity_transition_xroad"
            android:exported="false" />
        <activity
            android:name=".InGameActivity"
            android:exported="false" />
        <activity
            android:name=".activity_in_game"
            android:exported="false"
            android:label="@string/title_activity_in_game"
            android:theme="@style/Theme.XR_Phone.NoActionBar" />
        <activity
            android:name=".DevModeActivity"
            android:exported="false"
            android:parentActivityName=".LobbyActivity" />
        <activity
            android:name=".LobbyActivity"
            android:exported="false"
            android:label="@string/lobby_activity" />
        <activity
            android:name=".ConnectActivity"
            android:exported="false"
            android:label="@string/connect_activity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>