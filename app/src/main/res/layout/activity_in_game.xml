<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_xroad"
    tools:context=".InGameActivity">

        <LinearLayout
            android:id="@+id/primary_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Surface condition"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinnerSurfaceCondition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="32dp"
                        android:spinnerMode="dropdown"
                        android:layout_span="5"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Weather"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinnerWeather"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="32dp"
                        android:layout_span="5"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Time of Day"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinnerTimeofDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="32dp"
                        android:layout_span="5"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Advertising"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinnerAdvertising"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="32dp"
                        android:layout_span="5"/>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:background="@drawable/border">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/crown"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/labelPlayerName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="PlayerName"
                        android:textColor="@color/white"
                        android:layout_span="2"/>
                    <TextView
                        android:id="@+id/labelExposition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="0/2"
                        android:textColor="@color/white"
                        android:layout_span="1"/>

                    <ImageView
                        android:id="@+id/imageStatue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_span="1"
                        app:srcCompat="@drawable/ic_baseline_flag_24" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/labelGameplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="Gameplay"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>


                    <TextView
                    android:id="@+id/labelVitesse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="Vitesse"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/labelPawn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="Pawn"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/labelDistanceExp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="DistanceExp"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/lablelTeam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="Equipe"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/labelDistancePk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="Distance PK"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageButton
                        android:id="@+id/arrowbtn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/table_short_scn_rotation"
                        app:srcCompat="@drawable/ic_baseline_expand_more_24"
                        android:layout_span="5"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/more_obtion_player"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/resetplayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_refresh_24" />

                    <ImageButton
                        android:id="@+id/returntoParking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_flag_24" />

                    <ImageButton
                        android:id="@+id/lockmvt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_lock_24" />

                    <ImageButton
                        android:id="@+id/abort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_delete_forever_24" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <Button
                    android:id="@+id/stopGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retour au Lobby"
                    android:backgroundTint="@color/orange_xroad"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
            </TableLayout>


        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateTint="@color/orange_xroad"
        android:indeterminateTintMode="src_in"
        android:background="#55000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>